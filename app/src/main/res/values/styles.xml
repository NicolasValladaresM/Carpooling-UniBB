<?xml version="1.0" encoding="utf-8"?>
<resources>



    <style name="numberpickerStyle">
        <item name="android:background">@color/background_profile</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="DialogTitleStyle">
        <item name="android:textSize">18sp</item> <!-- Adjust the text size as needed -->
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Personaliza el color del texto de los botones -->
        <item name="android:textColorPrimary">@android:color/white</item>


    </style>

    <style name="ButtonAcceptStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/savebtn</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonCancelStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/red_block</item>
        <item name="android:textColor">@android:color/white</item>
    </style>






</resources>
