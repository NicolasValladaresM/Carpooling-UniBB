<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeleccionRol"
    android:background="#E0E0E0"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/blue_dark"
        />

    <!-- drawable/header.xml -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="305dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/header"
        >
    </RelativeLayout>

    <!-- drawable/card.xml -->


    <ImageView
        android:id="@+id/logo"
        android:layout_width="171dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:scaleType="fitXY"

        android:src="@mipmap/selectroluser" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardselect"
        android:layout_width="282dp"
        android:layout_height="265dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="194dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        >
    </androidx.cardview.widget.CardView>


    <View
        android:id="@+id/buttons"
        android:layout_width="160dp"
        android:layout_height="107.6dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="284dp"
        android:background="@drawable/buttons"
        android:layout_centerVertical="true"
        android:elevation="10dp"

        />





    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="217dp"
        android:layout_centerHorizontal="true"

        android:text="Tipo de usuario"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:elevation="10dp"
        android:textColor="@color/black"
        />


    <TextView
        android:id="@+id/labelSoli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="200dp"

        android:text="Solicitar servicio"

        android:textSize="12sp"
        android:gravity="center"
        android:elevation="10dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/labelOfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="392dp"
        android:layout_marginLeft="200dp"

        android:text="Ofrecer servicio"

        android:textSize="12sp"
        android:gravity="center"
        android:elevation="10dp"
        android:textColor="@color/black"
        />



    <Button
        android:id="@+id/solicitante"
        android:layout_width="136.2dp"
        android:layout_height="33.24dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="284dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/solicitante"
        android:contentDescription="@string/bot_n_para_el_solicitante"
        android:elevation="10dp"
        android:alpha="0.0"

        />



    <Button
        android:id="@+id/oferente"
        android:layout_width="138.2dp"
        android:layout_height="33.24dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="356dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/oferente"
        android:contentDescription="@string/bot_n_para_oferente"
        android:elevation="10dp"
        android:alpha="0.0"
        />

</RelativeLayout>