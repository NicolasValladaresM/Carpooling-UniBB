<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OriginCoords"
    android:layout_centerHorizontal="true"
    android:layout_alignParentTop="true"
    android:background="@drawable/backgroudnpersonselect"
    android:layout_marginTop="60dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginBottom="90dp"
    >


        <View
            android:id="@+id/mapubi"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@mipmap/mapaarribaubi"
            android:elevation="10dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="-5dp" />

        <Button
            android:id="@+id/ubiSaved"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_marginTop="208dp"
            android:alpha="1"
            android:background="@drawable/haciaorigenimg"
            android:text="Utilizar Ubicacion guardada"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />


        <Button
            android:id="@+id/saveUbi"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_marginTop="128dp"
            android:alpha="0"
            android:background="@drawable/saveubi"
            android:text="Guardar UbicaciÃ³n"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />

        <Button
            android:id="@+id/haciaUbb"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_marginTop="288dp"
            android:background="@drawable/haciaubb"
            android:text="Hacia la UBB"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />


        <Button
            android:id="@+id/cancel"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginTop="388dp"
            android:text="Cancelar"
            android:textColor="@color/white"
            android:backgroundTint="@color/red_block"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />


        <View
            android:id="@+id/c"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_marginTop="288dp"
            android:background="@drawable/haciaubb"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />




        <View
            android:id="@+id/b"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_marginTop="208dp"
            android:background="@drawable/haciaorigenimg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />
        <View
            android:id="@+id/a"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_marginTop="128dp"

            android:background="@drawable/saveubi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"


            />


</androidx.constraintlayout.widget.ConstraintLayout>