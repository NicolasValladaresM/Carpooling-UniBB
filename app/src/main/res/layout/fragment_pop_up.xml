<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="298dp"
    android:layout_height="600dp"
    android:padding="5dp"
    tools:context=".PopUpFragment"
    android:layout_centerHorizontal="true"
    android:layout_alignParentTop="true"
    android:background="@drawable/backgroudnpersonselect"
    android:elevation="4dp"

    >

    <View
        android:id="@+id/personicon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@mipmap/personazulicon"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       />

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personicon"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20dp"
        android:text="Información de usuario"
        android:layout_marginBottom="350dp"
        android:textColor="@color/black"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/inforepu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iconprome"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20dp"
        android:text="Puntos de Reputación"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"

        />

    <View
        android:id="@+id/nameicon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@mipmap/personainfotarjet"
        android:elevation="10dp"

        app:layout_constraintEnd_toStartOf="@id/name"
        app:layout_constraintTop_toTopOf="@id/name"
        app:layout_constraintBottom_toBottomOf="@+id/name"
        android:layout_marginRight="10dp"

        />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_boton1"
        android:textSize="16dp"
        android:text=""
        android:layout_marginBottom="320dp"
        android:textColor="@color/black"
        android:layout_marginLeft="60dp"

        android:textStyle="bold"
        />


    <View
        android:id="@+id/generoicon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@mipmap/generopersonatarget"
        android:elevation="10dp"
        app:layout_constraintEnd_toStartOf="@id/gender"
        app:layout_constraintTop_toTopOf="@id/gender"
        app:layout_constraintBottom_toBottomOf="@+id/gender"
        android:layout_marginRight="10dp"


         />

    <TextView
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_boton1"
        android:textSize="16dp"
        android:text=""
        android:layout_marginBottom="290dp"
        android:textColor="@color/black"
        android:layout_marginLeft="60dp"
        android:textStyle="bold"


        />


    <View
        android:id="@+id/carrericon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@mipmap/carrerapersonainfo"
        android:elevation="10dp"

        app:layout_constraintEnd_toStartOf="@id/carrer"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/carrer"

        app:layout_constraintTop_toTopOf="@id/carrer"

      />

    <TextView
        android:id="@+id/carrer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_boton1"
        android:textSize="16dp"
        android:text=""
        android:layout_marginBottom="260dp"
        android:textColor="@color/black"
        android:layout_marginLeft="60dp"
        android:textStyle="bold"
        />


    <View
        android:id="@+id/seaticon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@mipmap/seaticon"
        android:elevation="10dp"

        app:layout_constraintEnd_toStartOf="@id/selectNumber"

        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/selectNumber"
        app:layout_constraintTop_toTopOf="@id/selectNumber"
        android:visibility="invisible"

        />
    <TextView
        android:id="@+id/selectNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_boton1"
        android:layout_marginBottom="230dp"
        android:textSize="16dp"
        android:text=""
        android:textColor="@color/black"
        android:layout_marginLeft="60dp"
        android:textStyle="bold"


        />


    <View
        android:id="@+id/infoVehiculoView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@mipmap/autoinfo"
        android:elevation="10dp"

        app:layout_constraintEnd_toStartOf="@id/infoVehiculoPop"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/infoVehiculoPop"
        app:layout_constraintTop_toTopOf="@id/infoVehiculoPop"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/infoVehiculoPop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_boton1"
        android:layout_marginBottom="200dp"
        android:textSize="16dp"
        android:text=""
        android:textColor="@color/black"
        android:layout_marginLeft="60dp"
        android:textStyle="bold"

        />


    <View
        android:id="@+id/infoVehiculoViewPat"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@mipmap/patente"
        android:elevation="10dp"
        app:layout_constraintEnd_toStartOf="@id/infoVehiculoPat"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/infoVehiculoPat"
        app:layout_constraintTop_toTopOf="@id/infoVehiculoPat"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/infoVehiculoPat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_boton1"
        android:layout_marginBottom="170dp"
        android:textSize="16dp"
        android:text=""
        android:textColor="@color/black"
        android:layout_marginLeft="60dp"
        android:textStyle="bold"

        />


    <TextView
        android:id="@+id/Mmalo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_boton1"
        android:layout_marginBottom="100dp"
        android:textSize="18dp"
        android:text=""
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"



        />

    <TextView
        android:id="@+id/Malo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_boton1"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="30dp"

        android:textSize="18dp"
        android:text=""
        android:textColor="@color/black"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_boton1"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="30dp"

        android:textSize="18dp"
        android:text=""
        android:textColor="@color/black"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/Bueno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_boton1"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="30dp"

        android:textSize="18dp"
        android:text=""
        android:textColor="@color/black"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/Mbueno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_boton1"
        android:layout_marginBottom="20dp"
        android:textSize="18dp"
        android:text=""
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"


        />



    <View
        android:id="@+id/iconprome"
        android:layout_width="95dp"
        android:layout_height="92dp"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_boton1"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="40dp"
        />








    <Button
        android:id="@+id/btn_boton1"
        android:layout_width="133dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:text="Solicitar traslado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:textSize="16dp"

        android:layout_marginLeft="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="500dp"



        />

    <Button
        android:id="@+id/btn_boton2"
        android:layout_width="133dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:textSize="16dp"
        android:text="Cancelar"
        app:layout_constraintStart_toEndOf="@id/btn_boton1"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:backgroundTint="@color/red_block"
        android:layout_marginLeft="186dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="500dp"

        />


</androidx.constraintlayout.widget.ConstraintLayout>